<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
	
	<display-name>PROJECTNAME</display-name>
	
	<!--
	Use this to unlock files with Jetty on Windows
	--> 
	<!--
	<servlet>
	 	<servlet-name>default</servlet-name>
		<init-param>
			<param-name>useFileMappedBuffer</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	-->
  <context-param>
    <param-name>GripesPackage</param-name>
    <param-value>PACKAGE</param-value>
  </context-param>
	<listener>
	 	<listener-class>
  		net.sf.gripes.GripesContextListener
  	</listener-class>
  </listener>

	<filter>
 		<display-name>Stripes Filter</display-name>
 		<filter-name>StripesFilter</filter-name>
		<filter-class>net.sourceforge.stripes.controller.StripesFilter</filter-class>
		<init-param>
			<param-name>ActionResolver.Class</param-name>
		 	<param-value>net.sf.gripes.GripesActionResolver</param-value>
		</init-param>
		<init-param>
			<param-name>ActionResolver.Packages</param-name>
		 	<param-value>PACKAGE.action</param-value>
		</init-param>
		<init-param>
		    <param-name>ActionBeanContext.Class</param-name>
		    <param-value>PACKAGE.util.base.BaseActionBeanContext</param-value>
		</init-param>
				<init-param>
						<param-name>StripersistInit.Classes</param-name>
						<param-value>
							net.sf.gripes.GripesStripersistInit
						</param-value>
			  </init-param>
				<init-param>
					<param-name>Extension.Packages</param-name>
					<param-value>
				 		org.stripesstuff.stripersist,
				 		org.stripesstuff.plugin.security,
						net.sf.gripes.GripesActionResolver
				 	</param-value>
				</init-param>
				<init-param>
					<param-name>SecurityManager.Class</param-name>
					<param-value>net.sf.gripes.security.GripesSecurityManager</param-value>
				</init-param>
	</filter>
	<filter>
		<filter-name>DynamicMappingFilter</filter-name>
		<filter-class>
			net.sourceforge.stripes.controller.DynamicMappingFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>DynamicMappingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
	
  <servlet>
      <servlet-name>Template</servlet-name>
      <servlet-class>groovy.servlet.TemplateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>Template</servlet-name>
      <url-pattern>*.gsp</url-pattern>
  </servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<session-config>
  	<session-timeout>3600</session-timeout>
  </session-config>
</web-app>